@model IEnumerable<Application_Development_Project_2_Restuarant_.Models.Order>

@{
    ViewBag.Title = "Orders";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Logout", "Logout", "Driver")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OdDate)
        </th>
        <th>
            Customer Name  @*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OdDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
    }

</table>
