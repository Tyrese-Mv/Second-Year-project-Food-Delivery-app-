@model IEnumerable<Application_Development_Project_2_Restuarant_.Models.Item>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}




<table class="table table-striped table-condensed" id="mealTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItmId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItmId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>

                <td>
                    <button class="btn-group-xs" onclick="Edit('@Url.Action("AddOrEdit","Meal", new { id=@item.ItmId})')"><i class="fas fa-pencil-alt"></i>Edit</button>
                    <button class="btn-danger" onclick="Delete('@Url.Action("Delete","Meal", new { id=@item.ItmId})')"><i class="fas fa-trash-alt"></i>Delete</button>
                </td>
            </tr>

        }
    </tbody>
</table>
